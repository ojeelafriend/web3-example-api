{
  "name": "typescript-node-example",
  "version": "0.1.0",
  "description": "Template para proyectos nodejs con typescript, utilizando DDD y Hexagonal",
  "main": "server.js",
  "scripts": {
    "start": "tsc && cross-env NODE_ENV=production node ./dist/src/Api/server.js",
    "dev": "cross-env NODE_ENV=development nodemon ./dist/src/Api/server.js",
    "spec": "tsc --watch",
    "typescript": "tsc --init",
    "test": "cross-env NODE_ENV=test jest"
  },
  "keywords": [
    "github template",
    "Nodejs",
    "DDD",
    "Typescript",
    "Hexagonal Architecture"
  ],
  "author": "Alejo R. Solis",
  "license": "",
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.6",
    "cookie": "^0.6.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.2",
    "morgan": "^1.10.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.2"
  },
  "jest": {
    "verbose": true,
    "silent": true,
    "detectOpenHandles": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": false,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/test/"
    ]
  }
}
